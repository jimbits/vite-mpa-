{
  "compilerOptions": {
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Modern path mapping with your project structure
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/icons/*": ["public/icons/*"],
      "@/utils/*": ["src/ts/utils/*"],
      "@/components/*": ["src/components/*"],
      "@/css/*": ["src/css/*"],
      "@/pages/*": ["src/pages/*"],
      "@/markdown/*": ["markdown/*"],
      "@/vite/*": ["vite/*"]
    }
  },
  "include": ["src/**/*", "vite/**/*", "*.ts"]
}
